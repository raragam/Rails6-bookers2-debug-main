<div class='container px-5 px-sm-0'>
<div class='row'>

<div class='col-md-3'>

<h2><%= @user.name %>さんとのチャット</h2>

<%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit %>
<% end %>

</div>

<div class='col-md-8 offset-md-1'>

<table>
    <tbody>
        <% @chats.each do |chat| %>
            <tr>
                <td><%= chat.message %></td>
            </tr>
        <% end %>
    </tbody>
</table>

</div>
</div>
</div>