<div class='container'>

  <div class='row'>

    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'users/info' %>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>

          <% if @user == current_user %>

            <td>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
              </td>
            <td>
              <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
              </td>

          <% else %>
          <% end %>

          <td>
            <%= link_to "コメント数: #{@book.book_comments.count}", book_path(@book.id) %>
          </td>

        </tr>

      </table>

　　　　<div id="comments_area">
　　　　  <%= render "book_comments/index", book: @book %>
　　　　</div>

　　　　<div id="textarea">
　　　　  <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
　　　　</div>

    </div>
  </div>
</div>