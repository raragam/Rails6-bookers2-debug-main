<h2>Follower Users</h2>

<% if @users.exists? %>

  <% @users.each do |user| %>

    <table class='table table-hover table-inverse'>

      <thead>

        <tr>

          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>

        </tr>

      </thead>

      <tbody>

        <tr>

          <td>
            <%= image_tag user.get_profile_image %>
          </td>
          <td>
            <%= user.name %>
            </td>
          <td>
            フォロー数: <%= user.followings.count %>
            </td>
          <td>
            フォロワー数: <%= user.followers.count %>
            </td>
          <td>
            <%= link_to 'Show', user, class: "user_#{user.id}" %>
          </td>

        </tr>

      </tbody>

    </table>

  <% end %>

<% else %>

  <p>ユーザーはいません</p>

<% end %>
